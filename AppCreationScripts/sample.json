{
  "Sample": {
    "Title": "A .NET Console application that calls Microsoft Graph app API. ",
    "Level": 200,
    "Client": "Console app",
    "Service": "Microsoft Graph",
    "RepositoryUrl": "microsoft-identity-dotnet-app-api",
    "Endpoint": "Microsoft identity platform"
  },

  /*
    This section describes the Azure AD Applications to configure, and their dependencies
  */
  "AADApps": [
   
    {
      "Id": "client",
      "Name": "TodoListClient (active-directory-dotnet-native-aspnetcore-v2)",
      "Kind": "Desktop",
      "ReplyUrls": "https://login.microsoftonline.com/common/oauth2/nativeclient",
      "RequiredResourcesAccess": [
        {
          "Resource": "Microsoft Graph",
          "DelegatedPermissions": [ "Directory.AccessAsUser.All" ]
        }
      ],
      "ManualSteps": [
        {
        }
      ]
    }
  ],

  /*
    This section describes how to update the code in configuration files from the apps coordinates, once the apps
    are created in Azure AD.
    Each section describes a configuration file, for one of the apps, it's type (XML, JSon, plain text), its location
    with respect to the root of the sample, and the mappping (which string in the config file is mapped to which value
  */
  "CodeConfiguration": [
    {
      "App": "client",
      "SettingKind": "Code",
      "SettingFile": "\\..\\FindAppsWithExpiredCerts\\main.cs",
      "Mappings": [
        {
          "key": "tenant",
          "value": "$tenantName"
        },
        {
          "key": "clientId",
          "value": ".AppId"
        }
      ]
    }
  ]
}
